#ifndef _KILB_CSTDIO
#define _KILB_CSTDIO

#include <stdio.h>

namespace std {
    using ::fd_t;

    using ::getc;
    using ::fgetc;

    using ::putc;
    using ::putchar;
    using ::dbgputc;
    using ::fputc;

    using ::puts;
    using ::dbgputs;
    using ::fputs;
    
    using ::printf;
    using ::vprintf;

    using ::dbgprintf;
    using ::dbgvprintf;

    using ::fprintf;
    using ::vfprintf;

    using ::sprintf;
    using ::vsprintf;

    using ::snprintf;
    using ::vsnprintf;

    using ::fwrite;
    using ::fread;

    using ::fopen;
    using ::fclose;

    using ::fseek;

    using ::rewind;
}

#endif /* _KILB_CSTDIO */